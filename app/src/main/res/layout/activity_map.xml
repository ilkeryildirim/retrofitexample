<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MapActivity">

    <TextView
        android:id="@+id/map_user_fullnameTv"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="8dp"
        android:text="@string/user_full_name"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/map_user_nameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/map_user_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_user_fullnameTv"
        android:layout_alignStart="@+id/map_user_fullnameTv"
        android:layout_alignEnd="@+id/map_user_fullnameTv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="40dp"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/map_usermailTv"
        app:layout_constraintEnd_toEndOf="@+id/map_user_fullnameTv"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/map_user_fullnameTv" />

    <TextView
        android:id="@+id/map_usermailTv"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_user_nameTv"
        android:layout_alignStart="@+id/map_user_nameTv"
        android:layout_alignEnd="@+id/map_user_nameTv"
        android:layout_marginStart="-29dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="-29dp"
        android:layout_marginBottom="56dp"
        android:text="@string/user_mail"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/adressText"
        app:layout_constraintEnd_toEndOf="@+id/map_user_nameTv"
        app:layout_constraintStart_toStartOf="@+id/map_user_nameTv" />

    <TextView
        android:id="@+id/adressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_usermailTv"
        android:layout_alignStart="@+id/map_usermailTv"
        android:layout_alignEnd="@+id/map_usermailTv"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="-12dp"
        android:layout_marginBottom="16dp"
        android:text="@string/adress_text"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/map_streetTv"
        app:layout_constraintEnd_toEndOf="@+id/map_usermailTv"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/map_usermailTv" />

    <TextView
        android:id="@+id/map_streetTv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adressText"
        android:layout_alignStart="@+id/adressText"
        android:layout_alignEnd="@+id/adressText"
        android:layout_marginStart="-38dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="-21dp"
        android:layout_marginBottom="8dp"
        android:text="@string/user_street"
        app:layout_constraintBottom_toTopOf="@+id/map_suiteTv"
        app:layout_constraintEnd_toEndOf="@+id/adressText"
        app:layout_constraintStart_toStartOf="@+id/adressText" />

    <TextView
        android:id="@+id/map_suiteTv"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_streetTv"
        android:layout_alignStart="@+id/map_streetTv"
        android:layout_alignEnd="@+id/map_streetTv"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="8dp"
        android:text="@string/user_suite"
        app:layout_constraintBottom_toTopOf="@+id/map_cityTv"
        app:layout_constraintEnd_toEndOf="@+id/map_streetTv"
        app:layout_constraintStart_toStartOf="@+id/map_streetTv" />

    <TextView
        android:id="@+id/map_cityTv"
        android:layout_width="260dp"
        android:layout_height="17dp"
        android:layout_alignStart="@+id/map_suiteTv"
        android:layout_alignTop="@+id/map_suiteTv"
        android:layout_alignEnd="@+id/map_suiteTv"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-3dp"
        android:text="@string/user_suite"
        app:layout_constraintEnd_toEndOf="@+id/map_suiteTv"
        app:layout_constraintStart_toStartOf="@+id/map_suiteTv"
        tools:layout_editor_absoluteY="301dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>